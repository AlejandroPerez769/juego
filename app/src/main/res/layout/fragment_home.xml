<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    tools:context=".Home"
    tools:background="@drawable/gradient_list">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juegos de cartas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cards"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:fontFamily="@font/houstonville"
        />

    <ImageView
        android:id="@+id/cards"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boton1"
        android:src="@drawable/cardss" />



    <Button
        android:id="@+id/boton1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/houstonville"
        android:textSize="34dp"
        android:text="Jugar"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        />

    <Button
        android:id="@+id/boton22"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/houstonville"
        android:textSize="34dp"
        android:text="Iniciar sesiÃ³n"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/boton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/boton23"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/houstonville"
        android:textSize="34dp"
        android:text="Chat"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/boton22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


    <Button
        android:id="@+id/boton2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/houstonville"
        android:textSize="34dp"
        android:text="Opciones"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/boton23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />



    <Button
        android:id="@+id/boton3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/houstonville"
        android:textSize="34dp"
        android:text="Salir"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/boton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>